include $(GNUSTEP_MAKEFILES)/common.make

SUBPROJECT_NAME = gstgl

gstgl_C_FILES += \
  gstopengl.c \
  gstglimagesink.c \
  gstglupload.c \
  gstgldownload.c \
  gstglfilterblur.c \
  gstglfiltercube.c \
  gstglfilterlaplacian.c \
  gstglfiltersobel.c \
  gstglfilterglass.c \
  gstglfilterapp.c \
  gstglfilterreflectedscreen.c \
  gstglcolorscale.c \
  gltestsrc.c \
  gstgltestsrc.c \
  gstgloverlay.c \
  gstgldifferencematte.c \
  gstgldeinterlace.c \
  gstglbumper.c \
  gstgleffects.c \
  gstglmosaic.c

gstgl_INCLUDE_DIRS += \
  -I../../gst-libs \
  -I../../gst-libs/gst/gl \
  -Ieffects

ifeq ($(GNUSTEP_TARGET_OS), mingw32)
  gstgl_INCLUDE_DIRS += \
    -I../../win32/common \
    -IC:/gstreamer/include/libxml2 \
    -IC:/gstreamer/include/glib-2.0 \
    -IC:/gstreamer/lib/glib-2.0/include \
    -IC:/gstreamer/include \
    -IC:/gstreamer/include/gstreamer-0.10
endif

gstgl_CFLAGS = -Wall -DHAVE_CONFIG_H

include $(GNUSTEP_MAKEFILES)/subproject.make
